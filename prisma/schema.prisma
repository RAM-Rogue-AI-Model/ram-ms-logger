generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum ActionType {
  INSERT
  REMOVE
  UPDATE
  OTHER
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
}

enum MicroserviceType {
  USER
  EFFECT
  BATTLE
  LOGGER
  PLAYER
  ENEMY
  GAME
  ITEM
}

model Log {
  id           String           @id @default(uuid())
  microservice MicroserviceType
  action       ActionType
  level        LogLevel
  timestamp    DateTime         @default(now())
  message      String

  @@index([timestamp])
}
