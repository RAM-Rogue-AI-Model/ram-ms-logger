generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Microservice {
  id   Int    @id @default(autoincrement())
  name String @unique
  logs Log[]
}

enum ActionType {
  INSERT
  REMOVE
  UPDATE
  OTHER
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
}

model Log {
  id             Int          @id @default(autoincrement())
  microserviceId Int
  microservice   Microservice @relation(fields: [microserviceId], references: [id])
  action         ActionType
  level          LogLevel
  timestamp      DateTime     @default(now())
  message        String

  @@index([microserviceId])
  @@index([timestamp])
}
